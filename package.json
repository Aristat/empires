{
  "name": "empires",
  "version": "0.0.1",
  "description": "Empires game",
  "main": "src/server/index.js",
  "scripts": {
    "start": "NODE_ENV=production node src/server/index.js",
    "dev": "NODE_ENV=development nodemon src/server/index.js",
    "test": "DOTENV_CONFIG_PATH=.env.test jest --setupFiles dotenv/config",
    "test:watch": "DOTENV_CONFIG_PATH=.env.test jest --setupFiles dotenv/config --watch"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite3": "^5.1.6",
    "bcrypt": "^5.1.1",
    "express-session": "^1.17.3",
    "connect-sqlite3": "^0.9.13",
    "ejs": "^3.1.9",
    "dotenv": "^16.3.1",
    "sequelize": "^6.37.1",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "@jest/globals": "^29.7.0",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": ["./src/server/jest.setup.js"],
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/server/**/*.js",
      "!src/server/**/*.test.js",
      "!src/server/public/**/*.js"
    ]
  }
} 