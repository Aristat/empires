<div class="container-fluid mt-4">
  <!-- Top Bar with Key Information -->
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-3">
          <h5>Game #<%= @game.id %> - <%= @user_game.civilization.name %></h5>
          <p class="mb-0">Turn: <%= @user_game.turn %> / <%= @user_game.num_turns %></p>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div class="col">
              <h6>Resources</h6>
              <ul class="list-group list-group-horizontal">
                <li class="list-group-item d-flex justify-content-between">
                  <span>Wood:</span>
                  <span><%= @user_game.wood %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Food:</span>
                  <span><%= @user_game.food %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Iron:</span>
                  <span><%= @user_game.iron %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Gold:</span>
                  <span><%= @user_game.gold %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Tools:</span>
                  <span><%= @user_game.tools %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <h6>Land</h6>
          <ul class="list-group list-group-horizontal">
            <li class="list-group-item d-flex justify-content-between">
              <span>Forest:</span>
              <span><%= @user_game.f_land %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Mountain:</span>
              <span><%= @user_game.m_land %></span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
              <span>Plains:</span>
              <span><%= @user_game.p_land %></span>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Tab Navigation -->
  <ul class="nav nav-tabs mb-4" id="gameTabs" role="tablist">
    <li class="nav-item" role="presentation">
      <button class="nav-link active" id="builders-tab" data-bs-toggle="tab" data-bs-target="#builders" type="button" role="tab" aria-controls="builders" aria-selected="true">
        Builders
      </button>
    </li>
    <li class="nav-item" role="presentation">
      <button class="nav-link" id="units-tab" data-bs-toggle="tab" data-bs-target="#units" type="button" role="tab" aria-controls="units" aria-selected="false">
        Units
      </button>
    </li>
  </ul>

  <!-- Tab Content -->
  <div class="tab-content" id="gameTabsContent">
    <!-- Builders Tab -->
    <div class="tab-pane fade show active" id="builders" role="tabpanel" aria-labelledby="builders-tab">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Production Buildings</h5>
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                  <span>Wood Cutters:</span>
                  <span><%= @user_game.wood_cutter %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Gold Mines:</span>
                  <span><%= @user_game.gold_mine %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Iron Mines:</span>
                  <span><%= @user_game.iron_mine %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Tool Makers:</span>
                  <span><%= @user_game.tool_maker %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Hunters:</span>
                  <span><%= @user_game.hunter %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Farmers:</span>
                  <span><%= @user_game.farmer %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Infrastructure</h5>
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                  <span>Houses:</span>
                  <span><%= @user_game.house %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Town Centers:</span>
                  <span><%= @user_game.town_center %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Markets:</span>
                  <span><%= @user_game.market %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Towers:</span>
                  <span><%= @user_game.tower %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Units Tab -->
    <div class="tab-pane fade" id="units" role="tabpanel" aria-labelledby="units-tab">
      <div class="row">
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Military Units</h5>
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                  <span>Swordsmen:</span>
                  <span><%= @user_game.swordsman %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Archers:</span>
                  <span><%= @user_game.archers %></span>
                </li>
                <li class="list-group-item d-flex justify-content-between">
                  <span>Horsemen:</span>
                  <span><%= @user_game.horseman %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
        <div class="col-md-6">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Civilian Units</h5>
              <ul class="list-group">
                <li class="list-group-item d-flex justify-content-between">
                  <span>People:</span>
                  <span><%= @user_game.people %></span>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%= link_to 'Back to Games', root_path, class: 'btn btn-secondary mt-3' %>
</div>

<!-- Add Bootstrap JavaScript and dependencies -->
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
