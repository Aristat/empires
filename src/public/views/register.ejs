<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>1000 A.D. - Register</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container">
        <header>
            <h1>1000 A.D.</h1>
            <p class="subtitle">A free turn-based strategy game</p>
        </header>

        <main>
            <div class="register-container">
                <h2>Create Your Empire</h2>
                <% if (message) { %>
                    <div class="message <%= message.type || 'error' %>"><%= message.text %></div>
                <% } %>
                
                <form action="/register" method="POST" class="register-form">
                    <div class="form-group">
                        <label for="loginname">Login Name:</label>
                        <input type="text" id="loginname" name="loginname" required>
                        <small>Choose a unique name for your account (3-20 characters)</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" required>
                        <small>Minimum 8 characters</small>
                    </div>

                    <div class="form-group">
                        <label for="name">Empire Name:</label>
                        <input type="text" id="name" name="name" required>
                        <small>Name of your empire (3-50 characters)</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="email">Email:</label>
                        <input type="email" id="email" name="email" required>
                        <small>For account recovery and validation</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="civ">Choose Your Civilization:</label>
                        <select id="civ" name="civ" required>
                            <% civilizations.forEach(function(civ) { %>
                                <option value="<%= civ.id %>"><%= civ.name %> - <%= civ.description %></option>
                            <% }); %>
                        </select>
                        <small>Each civilization has unique bonuses</small>
                    </div>
                    
                    <button type="submit" class="btn btn-primary">Create Empire</button>
                </form>
                
                <div class="login-link">
                    <p>Already have an empire? <a href="/">Login here</a></p>
                </div>
            </div>
            
            <div class="info-container">
                <div class="info-box">
                    <h3>Starting Resources</h3>
                    <ul>
                        <li>Gold: 1000</li>
                        <li>Food: 500</li>
                        <li>Wood: 300</li>
                        <li>Iron: 200</li>
                        <li>Tools: 100</li>
                    </ul>
                </div>
                
                <div class="info-box">
                    <h3>Game Features</h3>
                    <ul>
                        <li>Build and upgrade structures</li>
                        <li>Train military units</li>
                        <li>Research new technologies</li>
                        <li>Join or create alliances</li>
                        <li>Trade with other players</li>
                        <li>Explore new lands</li>
                        <li>Battle other empires</li>
                    </ul>
                </div>

                <div class="info-box">
                    <h3>Civilization Bonuses</h3>
                    <ul>
                        <% civilizations.forEach(function(civ) { %>
                            <li>
                                <strong><%= civ.name %>:</strong>
                                <ul>
                                    <% if (civ.bonuses.military !== 1) { %>
                                        <li>Military: <%= (civ.bonuses.military * 100 - 100) %>%</li>
                                    <% } %>
                                    <% if (civ.bonuses.construction !== 1) { %>
                                        <li>Construction: <%= (civ.bonuses.construction * 100 - 100) %>%</li>
                                    <% } %>
                                    <% if (civ.bonuses.research !== 1) { %>
                                        <li>Research: <%= (civ.bonuses.research * 100 - 100) %>%</li>
                                    <% } %>
                                </ul>
                            </li>
                        <% }); %>
                    </ul>
                </div>
            </div>
        </main>
    </div>
</body>
</html> 