<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>1000 A.D. - Game</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <h1>1000 A.D.</h1>
        <div class="user-info">
            <span>Welcome, <%= user.loginname %></span>
            <a href="/logout" class="logout-btn">Logout</a>
        </div>
    </header>

    <main class="container">
        <nav class="game-menu">
            <ul>
                <li><a href="/game">Status</a></li>
                <li><a href="/game/build">Build</a></li>
                <li><a href="/game/army">Army</a></li>
                <li><a href="/game/research">Research</a></li>
                <li><a href="/game/alliance">Alliance</a></li>
                <li><a href="/game/messages">Messages</a></li>
                <li><a href="/game/market">Market</a></li>
            </ul>
        </nav>

        <div class="game-dashboard">
            <section class="resources">
                <h2>Resources</h2>
                <div class="resource-grid">
                    <div class="resource-item">
                        <span class="resource-name">Gold</span>
                        <span class="resource-value"><%= resources.gold %></span>
                    </div>
                    <div class="resource-item">
                        <span class="resource-name">Food</span>
                        <span class="resource-value"><%= resources.food %></span>
                    </div>
                    <div class="resource-item">
                        <span class="resource-name">Wood</span>
                        <span class="resource-value"><%= resources.wood %></span>
                    </div>
                    <div class="resource-item">
                        <span class="resource-name">Iron</span>
                        <span class="resource-value"><%= resources.iron %></span>
                    </div>
                    <div class="resource-item">
                        <span class="resource-name">Tools</span>
                        <span class="resource-value"><%= resources.tools %></span>
                    </div>
                    <div class="resource-item">
                        <span class="resource-name">Wine</span>
                        <span class="resource-value"><%= resources.wine %></span>
                    </div>
                </div>
            </section>

            <section class="buildings">
                <h2>Buildings</h2>
                <div class="buildings-grid">
                    <% buildings.forEach(building => { %>
                        <div class="building-item">
                            <h3><%= building.type %></h3>
                            <p>Level: <%= building.level %></p>
                            <form action="/game/upgrade/<%= building.id %>" method="POST">
                                <button type="submit" class="upgrade-btn">Upgrade</button>
                            </form>
                        </div>
                    <% }); %>
                </div>
            </section>

            <section class="military">
                <h2>Military</h2>
                <div class="military-grid">
                    <div class="military-item">
                        <span class="military-name">Soldiers</span>
                        <span class="military-value"><%= military.soldiers %></span>
                    </div>
                    <div class="military-item">
                        <span class="military-name">Archers</span>
                        <span class="military-value"><%= military.archers %></span>
                    </div>
                    <div class="military-item">
                        <span class="military-name">Cavalry</span>
                        <span class="military-value"><%= military.cavalry %></span>
                    </div>
                </div>
            </section>

            <section class="build-options">
                <h2>Build New Structure</h2>
                <form action="/game/build" method="POST">
                    <select name="buildingType" required>
                        <option value="">Select building type</option>
                        <option value="house">House</option>
                        <option value="farm">Farm</option>
                        <option value="barracks">Barracks</option>
                        <option value="market">Market</option>
                        <option value="research_center">Research Center</option>
                    </select>
                    <button type="submit" class="build-btn">Build</button>
                </form>
            </section>
        </div>
    </main>
</body>
</html> 